{% extends 'base.html.twig' %}

{% block title %}Test Blog{% endblock %}

{% block body %}
    <div class="container">
        {% for entry in blog_entries %}
            <h2 class="title">{{ entry.title }}</h2>
            {% if entry.content|length <= 100 %}
                <p>{{ entry.content }}</p>
            {% else %}
                <p>{{ entry.content|slice(0,100) }} <a href="">M&aacute;s...</a> </p>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
